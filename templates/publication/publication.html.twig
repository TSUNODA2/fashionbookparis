{% extends 'base.html.twig' %}
{% block body %}


{% include "publication/profil.html.twig" %}

<style>

    .all-content{
        width: 100%;
        height: 100%;
    }
   
    .block-container{
        width: 1200px;
        margin-left: 350px;
        margin: auto; 
        margin-top: -600px;
        padding: 50px;
        display: flex;
        flex-direction: column;
    }

    .add-article{
        width: 100%;
        background-color: #ffffff ;
        border-radius: 20px;
        display: flex;
        justify-content:space-between;
    }

    .add-article p, .add-article svg{
        padding-left: 20px;
        padding-right: 20px;
    }

    .article{
        margin-top: 20px;
        border-radius: 10px;
        box-shadow: 2px 2px 2px 2px rgb(50, 51, 51);
        background-color: white;
        padding: 20px;
    }

    .name-user-fb{
        padding-right: 5px;
        padding-left: 5px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .action img{
        margin-bottom: 15px;
    }

    .share_facebook{
        border: none;
    }


    .name-user-fb a{
        text-decoration: none;
        color: black;     
    }
    .name-user-fb a:hover{
        text-decoration: underline;
    }


    .bi-three-dots{        
        border: 1px solid transparent;
        border-radius: 50px;
        margin-bottom: 15px;
    }

    .bi-three-dots:hover{
        background-color: #959a9e;
    }

    .photo-all{
        display: flex;
    }

  
    .content-date{
        width:100%;
        padding-left: 20px;
        padding-right: 20px;
        display:flex;
        flex-direction: column;
    }

    .metadata{
        display: flex;
        align-items: flex-end;
        justify-content: flex-end;
        padding-bottom: 10px;
    }

    .content-fb{
        height: 90%;
    }

    .modal-publish{
        width: 100%;
        background-color: #b5cde0; 
        padding: 20px;
    }

    .modal-content{
        width: 190%;
        background-color: #b5cde0; 
        padding: 20px; 
        margin-left: -230px;
    }
   
    .photo-fbp{
        margin-top: 15px;
    }

    .valid_button{
        display: flex;
        justify-content: center;
    }

    .submit{
        width: 30%;
        font-size: 18px;
        padding: 5px;
        border-radius: 20px; 
        margin-top: 10px;
        border: none;
        cursor: pointer;  
        background-color:#ffffff ;
        border: 2px solid rgb(15, 15, 109);
        color: rgb(15, 15, 109);
    }

    .submit:hover{
        border:2px solid transparent;
        color: white;
        background-color:rgb(15, 15, 109);
    }

    .input-content{
        width: 100%;
        border: none;
        height: 100px;
        margin-top: 10px;
        font-size: 20px;
        
    }
    svg{
        margin-left: 10px;
    }

    .input-photo{
        border: none;
        width: 100%;
        font-size: 20px;
        margin-left: 10px;
    }

    @media screen and (max-width: 1280px)
{
    .block-container{
        margin-top: 20px;
        width: 100%;
    }

    .photo-all{
        flex-direction: column;
    }

    .photo-fbp{
        margin:auto;
    }
}
</style>
<body>
    <div class="block-container">
           
    <div class="contentfdp">
        <div class="modal-publish">
            {{ form_start( formArticleFb )}}        
            
                {{ form_row(formArticleFb.contentfbp, {'attr' : 
                {'placeholder': 'Ecrivez votre contenu ici', 'class' : 'input-content'}}) }}
        
                <div class="photo-fbp">
                    {{ form_row(formArticleFb.photo, {'attr' : {'class' : 'input-photo'}}) }} 
                </div>
                <div class="valid_button">
                    <button class="submit">Envoyer</button>
                </div>
            {{ form_end( formArticleFb )}}
        </div>
    </div>
      

        {% for articleFb in app.user.articleFbs %}
            <div class="article">
                <div class="name-user-fb">
                    <a href="{{ path('profilpage') }}" ><p>{{ articleFb.user.surname }} {{ articleFb.user.name }}</p></a>
                            
                    <div class="action">

                        <a href="{{ path('create', {'id':articleFb.id}) }}"><img src="{{ asset('icones/partager.png') }}" alt="" width="36px"></a>
                        
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"class="bi bi-three-dots" viewBox="0 0 16 16"><a href="{{ path('create', {'id':articleFb.id }) }}" id="lien-articlefb"></a>
                        <path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 10 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z"/>
                        </svg>
                    </div>                       
                </div>
                
                <div class="photo-all">
                    <div class="photo-fb">
                        <!-- <img src="{{app.request.basepath}}/uploads/{{articleFb.photo}}" alt="">  -->
                        <img src="{{ asset('/uploads/' ~ articleFb.photo) }} " alt="" height="200px">
                    </div>

                    <div class="content-date">
                        <div class="content-fb">
                            <p>{{ articleFb.contentFbp | raw }}</p>
                        </div>
                    </div>                    
                </div>
                   
                    <div class="metadata">Le {{ articleFb.createdAt | date('d/m/Y') }} Ã  {{ articleFb.createdAt | date('H:i') }}</div>                              
            </div>



        {% endfor %}
    </div>

    {% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
<script>
    let modal = new Modal('#exampleModal');
</script>

{% endblock %}