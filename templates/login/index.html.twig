{% extends 'layout/user_sign.html.twig' %}

{% block title %}
  FashionbookParis|Connexion
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('login') }}
{% endblock %}

{% block content %}
  <section class="connexion">
    {% if error %}
      <div>
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>
    {% endif %}
    <form action="{{ path('login') }}" method="POST">
      <input type="email"
        name="_username"
        id="username"
        value="{{ last_username }}"
        placeholder="E-mail" />
      <input type="password"
        name="_password"
        id="password"
        placeholder="Mot de passe" />
      <input type="hidden" name="_target_path" value="/" />
      <input type="hidden"
        name="_csrf_token"
        value="{{ csrf_token('authenticate') }}" />
      <input type="submit" value="Se connecter" />
      <a href="#">Mot de passe oubli√©?</a>
      <p>
        Vous n'avez pas encore de compte? <a href="">Je m'inscris</a>
      </p>
    </form>
  </section>
{% endblock %}
